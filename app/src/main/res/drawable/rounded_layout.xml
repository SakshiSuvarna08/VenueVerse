<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#FFF2CC"
        android:endColor="#FFECB3"
        android:angle="45"/>

    <!-- Optional solid background if you want a flat color instead of gradient -->
    <!-- <solid android:color="#FFF2CC"/> -->
    <!-- Rounded Corners -->
    <corners android:radius="36dp"/>

    <!-- Border/Stroke -->
    <stroke
        android:width="1.5dp"
        android:color="@color/black"/>

    <!-- Padding inside the shape -->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp"/>

    <!-- Shadow (elevation for shadow effect) - requires a background to be added in layout -->

</shape>
